{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esnext"
  },
  "include": ["./**/*"],
  "exclude": ["./plugins/**/*", "./typings/**/*", "./built/**/*"]
}
